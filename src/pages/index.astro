---
import type { MarkdownInstance } from "astro";
import BaseLayout from "../layouts/BaseLayout.astro";

type Frontmatter = {
  title: string;
};

const posts = Object.values(
  import.meta.glob<MarkdownInstance<Frontmatter>>(
    './blog/*/*.{md,mdx}',
    { eager: true }
  )
);
---

